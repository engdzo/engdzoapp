<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamyangthinley.engdzoterminologyapp.DefinitionActivity">




    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/linear"
        android:layout_height="40dp"
        android:weightSum="7"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_volume_up_black_18dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/dzongkhaequivalenttext"
            android:textSize="16sp"
            android:layout_weight="5"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/outline_favorite_black_18dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/termtext"
        android:padding="8dp"
        android:textSize="20sp"
        android:layout_below="@+id/linear"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/definitiontext"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_below="@id/termtext"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acronymstext"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_below="@id/definitiontext"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wordclasstext"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_below="@id/acronymstext"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categorytext"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_below="@id/wordclasstext"
        />

</RelativeLayout>